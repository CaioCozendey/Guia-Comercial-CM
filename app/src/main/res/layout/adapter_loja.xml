<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="160dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fotoLoja"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="380dp"
        android:layout_height="160dp"
        android:src="@drawable/bra"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="@id/fotoLoja"
        app:layout_constraintStart_toStartOf="@id/fotoLoja"
        app:layout_constraintEnd_toEndOf="@id/fotoLoja"
        android:background="@color/pretoTransparente"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nomeLoja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        android:textColor="@color/white"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:text="@string/drogarias_brasileiras_cachoeiro"/>

</androidx.constraintlayout.widget.ConstraintLayout>